<web-fragment xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-fragment_3_0.xsd"
              version="3.0">

  <name>osnz_template_scraper</name>

  <listener>
    <listener-class>nz.net.osnz.common.scraper.PeriodicTemplateScraperTask</listener-class>
  </listener>

  <jsp-config>
    <taglib>
      <taglib-uri>http://osnz.net.nz/tld/scraper</taglib-uri>
      <taglib-location>/WEB-INF/scraper.tld</taglib-location>
    </taglib>
  </jsp-config>
</web-fragment>
